
<div class='table-responsive'>
<table class='table table-table-condensed'>
  <thead>
    <tr>
      <th>氏名</th>
      <th>大学</th>
      <th>携帯電話</th>
      <th>オプション</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.univ %></td>
        <td><%= profile.phone %></td>
        <td><% if @participants.include?(profile.id) %>
          <%= link_to '登録解除' , "/profiles/events/#{params[:id]}/deletenewfromeventprocess/#{profile.id}", class: 'btn btn-warning' ,style:'color:#ffffff', method:"post" %>
        <% else %>
          <%= link_to '登録' , "/profiles/events/#{params[:id]}/addnewtoeventprocess/#{profile.id}", class: 'btn btn-primary' ,style:'color:#ffffff', method:"post" %>
        <%end%>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
