<div style='text-align:center;'>
  <p id="notice"><%= notice %></p>

  <%if Rails.env == 'development'%>
  <p>
  <strong>id:</strong>
  <%= @event.id %>
  </p>
  <%end %>
  <p>
    <strong>種類:</strong>
    <%= @event.kindofevent %>
  </p>
  <p>
    <strong>開催日時:</strong>
    <%= @event.dateofevent.year %>年<%= @event.dateofevent.month %>月<%= @event.dateofevent.day %>日：<%= @event.dateofevent.hour %>時<%= @event.dateofevent.min %>分
  </p>
  <p>
    <strong>終了日時:</strong>
    <%= @event.finishtime.year %>年<%= @event.finishtime.month %>月<%= @event.finishtime.day %>日：<%= @event.finishtime.hour %>時<%= @event.finishtime.min %>分
  </p>


  <p>
    <strong>開催場所:</strong>
    <%= @event.place %>
  </p>

  <p>
    <strong>参加者:</strong>
    <%= @event.participants %>
  </p>

  <p>
    <strong>補足:</strong>
    <%= @event.supplement %>
  </p>
  <% if @profiles.present?%>
    以下新入生の参加者
    <br>
    <%= render 'listofnewcomer', profiles:@profiles %>
  <% end %>
  <br>
  <%= link_to '編集', edit_event_path(@event), class:"btn btn-warning", style:"color:#FFFFFF" %> |
  <%= link_to '新入生をイベントに追加する',addnewtoevent_event_path(@event), class:"btn btn-success", style:"color:#FFFFFF" %> |
  <%= link_to 'イベント画面に戻る', events_path, class:"btn btn-info", style:"color:#FFFFFF" %>
  <br>
</div>
