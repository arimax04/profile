
<div class='table-responsive'>
<table class='table table-table-condensed'>
  <thead>
    <tr class="info" style="background-color:#FF8080;">
      <th>id</th>
      <th>種類</th>
      <th>開催日</th>
      <th>開催場所</th>
      <th>登録日</th>
      <th>オプション</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% events.each do |event| %>
      <tr class="info" style="background-color:#00CCFF;">
        <td><%= event.id %></td>
        <td><%= event.kindofevent %></td>
        <td><%= event.date %></td>
        <td><%= event.place %></td>
        <td><%= event.created_at.strftime('%Y-%m-%d %H:%M')  %></td>
        <td><%= link_to '詳細' , "/profiles/event/show/#{event.id}" , class: 'btn btn-primary' ,style:'color:#ffffff' %></td>
        <td><%= link_to '編集', "/profiles/event/#{event.id}/edit",class: 'btn btn-primary',style:'color:#ffffff' %></td>
        <td><%= link_to '消去', "/profiles/event/#{event.id}", method: :delete, data: { confirm: '本当に消してしますがよろしいですか？' },class:'btn btn-danger',style:'color:#ffffff' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
